<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back2opt" />

    <TextView
        android:id="@+id/timerBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBabe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="GAME STARTS IN:"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnBabe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="56dp"
        android:background="#8CC63E"
        android:height="60dp"
        android:text="TOUCH ME BABE!"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timerTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timerBottom"
        android:layout_below="@+id/btnHoney"
        android:layout_marginTop="22dp"
        android:rotation="180"
        android:text="GAME STARTS IN:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/countBabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timerBottom"
        android:layout_centerHorizontal="true"
        android:text="000"
        android:textColor="#8CC63E"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/countHoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerTop"
        android:layout_centerHorizontal="true"
        android:text="000"
        android:rotation="180"
        android:textColor="#E94660"
        android:textSize="100sp" />

    <Button
        android:id="@+id/btnHoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:background="#E94660"
        android:height="60dp"
        android:rotation="180"
        android:text="TOUCH ME HONEY! "
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>